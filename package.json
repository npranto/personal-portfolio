{
  "name": "personal-portfolio",
  "version": "2.0.0",
  "scripts": {
    "tailwind:build": "npx tailwindcss -c ./vendor/tailwind/tailwind.config.js -i ./vendor/tailwind/input.css -o ./vendor/tailwind/output.css",
    "tailwind:watch": "npx tailwindcss -c ./vendor/tailwind/tailwind.config.js -i ./vendor/tailwind/input.css -o ./vendor/tailwind/output.css --watch",
    "lint": "npx eslint ./",
    "format": "npx prettier --write \"**/*.{html,css,js,json}\"",
    "dev": "concurrently \"npm run tailwind:watch\" \"live-server ./ --port=3000\"",
    "build": "npm run tailwind:build && npm run lint && npm run format && bash build.sh",
    "preview": "npm run build && live-server dist/ --port=9000"
  },
  "devDependencies": {
    "concurrently": "^6.5.1",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "live-server": "^1.2.1",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.8"
  },
  "dependencies": {}
}
